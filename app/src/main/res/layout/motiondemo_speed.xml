<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/block"
    android:id="@+id/speed_container"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/space_XS"
    android:layout_weight="1">

    <TextView
        style="@style/sm_silicon_grey"
        android:fontFamily="sans-serif-light"
        android:text="@string/motion_speed"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_XL"
        android:layout_marginTop="@dimen/space_XS"
        android:background="@color/sl_white"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linear_speed_container"
            style="@style/block"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/m_silicon_grey"
                android:id="@+id/speed"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light" />

            <TextView
                style="@style/s_silicon_grey"
                android:id="@+id/speed_units"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rpm_container"
            style="@style/block"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <TextView
                style="@style/m_silicon_grey"
                android:id="@+id/rpm"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light" />

            <TextView
                style="@style/s_silicon_grey"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:text="@string/motion_rpm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>